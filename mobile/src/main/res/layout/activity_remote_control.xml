<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.indevstudio.stbtest.remote.RemoteControlActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_1_11"
                    android:text="TV" />

                <Button
                    android:id="@+id/button_1_12"
                    android:text="Power" />

                <Button
                    android:id="@+id/button_1_13"
                    android:text="AV" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_1_21"
                    android:text="Back" />

                <Button
                    android:id="@+id/button_1_22"
                    android:text="Menu" />

                <Button
                    android:id="@+id/button_1_23"
                    android:text="Toggle" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView />

                <Button
                    android:id="@+id/button_1_32"
                    android:text="Up" />

                <TextView />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_1_41"
                    android:text="Left" />

                <Button
                    android:id="@+id/button_1_42"
                    android:text="OK" />

                <Button
                    android:id="@+id/button_1_43"
                    android:text="Right" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView />

                <Button
                    android:id="@+id/button_1_52"
                    android:text="Down" />

                <TextView />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_1_61"
                    android:text="Rev" />

                <Button
                    android:id="@+id/button_1_62"
                    android:text="Play" />

                <Button
                    android:id="@+id/button_1_63"
                    android:text="FF" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_1_71"
                    android:text="V+" />

                <Button
                    android:id="@+id/button_1_72"
                    android:text="Mute" />

                <Button
                    android:id="@+id/button_1_73"
                    android:text="P+" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_1_81"
                    android:text="V-" />

                <Button
                    android:id="@+id/button_1_82"
                    android:text="Last" />

                <Button
                    android:id="@+id/button_1_83"
                    android:text="P-" />
            </TableRow>
        </TableLayout>


        <!--
        DIGITS PANEL
        -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_2_11"
                        android:text="1" />

                    <Button
                        android:id="@+id/button_2_12"
                        android:text="2" />

                    <Button
                        android:id="@+id/button_2_13"
                        android:text="3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_2_21"
                        android:text="4" />

                    <Button
                        android:id="@+id/button_2_22"
                        android:text="5" />

                    <Button
                        android:id="@+id/button_2_23"
                        android:text="6" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_2_31"
                        android:text="7" />

                    <Button
                        android:id="@+id/button_2_32"
                        android:text="8" />

                    <Button
                        android:id="@+id/button_2_33"
                        android:text="9" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView />

                    <Button
                        android:id="@+id/button_2_42"
                        android:text="0" />

                    <TextView />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingTop="20dp"
                >

                <TableRow android:padding="5dp">
                    <TextView
                        android:text="IR Sys Code: " />

                    <TextView
                        android:id="@+id/text_sysCode"
                        android:layout_width="match_parent"/>
                </TableRow>

                <TableRow android:padding="5dp">
                    <TextView
                        android:text="IR Key Code: " />

                    <TextView
                        android:id="@+id/text_keyCode"
                        android:text="" />
                </TableRow>

                <TableRow android:padding="5dp">
                    <TextView
                        android:text="Key Scan Code: " />

                    <TextView
                        android:id="@+id/text_scanCode"
                        android:text="" />
                </TableRow>

            </TableLayout>


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Разрешить нажатие экранной кнопки"
                android:maxLines="1"
                android:textSize="12sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_Clear"
                android:text="Очистить цвет кнопок"
                 />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
