<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.indevstudio.stbtest.led.LedActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

    <Button
        android:id="@+id/buttonTest1"
        style="@style/AppTheme.Button.m10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTest1"
        android:text="Включить индикатор"
        android:textAlignment="textStart">
    </Button>

    <Button
        android:id="@+id/buttonTest2"
        style="@style/AppTheme.Button.m10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTest2"
        android:text="Выключить индикатор"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/buttonTest3"
        style="@style/AppTheme.Button.m10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onTest3"
        android:text="Мигание индикатора"
        android:textAlignment="textStart" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
